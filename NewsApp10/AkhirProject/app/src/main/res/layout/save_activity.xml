<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_news1"
        android:layout_width="333dp"
        android:layout_height="157dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/news_two" />

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="370dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:text="Police step in as ‘free Palestine’ chanters approach pro-Israel rally in London"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_news1"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/iv_news1"
        app:layout_constraintTop_toBottomOf="@+id/iv_news1" />

    <ImageView
        android:id="@+id/iv_news2"
        android:layout_width="335dp"
        android:layout_height="155dp"
        android:layout_marginTop="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tittle"
        app:srcCompat="@drawable/news_three" />

    <TextView
        android:id="@+id/tv_tittle2"
        android:layout_width="373dp"
        android:layout_height="54dp"
        android:layout_marginTop="13dp"
        android:text="America Will Reopen Embassy in Jerusalem Palestine"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_news2"
        app:layout_constraintStart_toStartOf="@+id/iv_news2"
        app:layout_constraintTop_toBottomOf="@+id/iv_news2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="335dp"
        android:layout_height="155dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tittle2"
        app:srcCompat="@drawable/news_four" />

</androidx.constraintlayout.widget.ConstraintLayout>